#:kivy 1.0.0
#:import NoTransition kivy.uix.screenmanager.NoTransition

<MyScreenManager>:
    transition: NoTransition()
    canvas:
        Color:
            rgba: 0,0,0,0
        Rectangle:
            size: self.size
    Launch:
        name: "Launch"
    Splash:
        name: "splash"

<Splash>:
    BoxLayout:
        orientation:"vertical"
        Label:
            text: "Signo"
            size_hint: 0.4,0.4
            font_size: dp(40)
        Button:
            text:"Launch"
            on_release: root.launch()
          
<Launch>:
    AnchorLayout:
        anchor_x: 'center'
        anchor_y: 'center'
        BoxLayout:
            id: 'container'
            orientation: "vertical"
            BoxLayout:
                size_hint:1,1
                id:'header'
                orientation:"horizontal"
                AnchorLayout:
                    id:'Menu_button'
                    anchor_x:'center'
                    anchor_y:'center'
                    canvas:
                        Color:
                            rgba: 1,0,0,1
                        Rectangle:
                            size: root.height/6,root.height/6
                            pos: 0,root.height-root.height/6
                        Color:
                            rgba: 0,1,0,1
                        RoundedRectangle:
                            size:root.height/6,4
                            pos: 10,root.height-20      
                            radius:  [(5, 5), (5, 5), (5, 5), (5, 5)]

            BoxLayout:
                id: "center"
                size_hint: 1,3
                orientation:'horizontal' 
            BoxLayout:
                orientation: "horizontal"
                size_hint:1,1
                id:'footer'
                canvas:
                    Color:
                        rgba: 100/255,210/255,237/255,1
                    RoundedRectangle:
                        size: root.width,root.height/6
                        pos:0,0
                        radius:[(40,40),(40,40),(0,0),(0,0)]
                Image:
                    allow_stretch: True
                    keep_ratio:True
                    source: 'footer.svg'

    